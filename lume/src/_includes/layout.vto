<!DOCTYPE html>
<html lang="{{metas.lang}}">
  <head>
    <meta charset="UTF-8">
    <title>{{ title }} | {{ metas.site }}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/style/main.css">
    <link
      rel="alternate"
      type="application/feed+json"
      title="{{metas.site}}"
      href="{{ 'feed.json' |> url(true) }}"
    />
    <link
      rel="alternate"
      type="application/rss+xml"
      title="{{metas.site}}"
      href="{{ 'feed.rss' |> url(true) }}"
    >
    <meta property="og:title" content="{{ title }} | {{ metas.site }}">
    <meta property="og:description" content="{{ description }}">
    <meta property="og:url" content="https://dd2030.org{{ url }}">
    <meta property="og:site_name" content="{{ metas.site }}">
    <meta property="og:image" content="https://dd2030.org/ogp.png">
    <meta property="og:type" content="website">
    <meta property="og:locale" content="ja_JP">
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="{{ title }} | {{ metas.site }}">
    <meta name="twitter:description" content="{{ description }}">
    <meta name="twitter:image" content="https://dd2030.org/ogp.png">
  </head>
  <body class="bg-background text-foreground">
    <header
      class="sticky top-0 z-50 w-full bg-background/95 backdrop-blur"
      data-pagefind-ignore="all"
    >
      <div class="mx-auto w-full max-w-7xl">
        <div class="flex items-center h-14 px-4">
          <div class="flex-1">
            <a href="/" class="inline-block font-bold text-xl">
              {{ metas.site }}
            </a>
          </div>
          <div class="flex gap-2">
            <div id="search"></div>
          </div>
        </div>
      </div>
      <div class="gradient h-0.5"></div>
    </header>

    <main>
      <div class="max-w-7xl mx-auto px-4 py-6">
        {{ content }}
      </div>
    </main>

    <footer>
      <div class="gradient h-0.5"></div>
      <div class="sm:flex justify-center pt-6">
        <div>
          <a
            href="https://join.slack.com/t/dd2030/shared_invite/zt-3bg5nmxiv-CB9LXLpvxH_JvJil_EPa_w"
            class="btn btn-ghost h-11"
            target="_blank"
            rel="noopener"
          >
            Slackに参加
          </a>
        </div>
        <div>
          <a
            href="https://github.com/digitaldemocracy2030"
            class="btn btn-ghost h-11"
            target="_blank"
            rel="noopener"
          >
            GitHub
          </a>
        </div>
        <div>
          <a
            href="https://note.com/dd2030"
            class="btn btn-ghost h-11"
            target="_blank"
            rel="noopener"
          >
            Note
          </a>
        </div>
        <div>
          <a href="/policies/privacy" class="btn btn-ghost h-11">
            プライバシーポリシー
          </a>
        </div>
        <div>
          <a href="/policies/terms" class="btn btn-ghost h-11">
            利用規約
          </a>
        </div>
      </div>
      <div class="flex justify-center pt-4 pb-6">
        <small>© {{ new Date().getFullYear() }} デジタル民主主義2030</small>
      </div>
    </footer>
  </body>
</html>
