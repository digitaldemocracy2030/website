---
layout: layout.vto
---
<div class="max-w-xl mx-auto">
  {{ if publish_on }}
  <p class="text text-gray-500 my-2">
    <time datetime="{{ publish_on }}">{{ publish_on |> date("y年M月d日") }}</time>
  </p>
  {{ /if }}
  <hgroup>
    <h1 class="text-4xl font-bold mb-6">{{ title }}</h1>
    <div class="content {{ content_classes |> join(" ") }}">
      {{ content }}
    </div>
  </hgroup>
</div>
